---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Resources - DevStack">
	<h1 class="text-4xl font-bold mb-8">Development Resources</h1>
	<div class="grid gap-6">
		<section class="border rounded-lg p-6">
			<h2 class="text-2xl font-semibold mb-4">Frontend Development</h2>
			<ul class="list-disc list-inside space-y-2">
				<li>React.js Documentation</li>
				<li>Vue.js Tutorials</li>
				<li>CSS Tricks</li>
				<li>JavaScript Best Practices</li>
			</ul>
		</section>
		<section class="border rounded-lg p-6">
			<h2 class="text-2xl font-semibold mb-4">Backend Development</h2>
			<ul class="list-disc list-inside space-y-2">
				<li>Node.js Fundamentals</li>
				<li>Database Design</li>
				<li>API Development</li>
				<li>Security Best Practices</li>
			</ul>
		</section>
	</div>
</Layout>
